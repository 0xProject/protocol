{
    "name": "zippo",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "tsc",
        "examples:basic": "tsx examples/basic.ts",
        "dev:server": "nodemon src/main.ts",
        "start": "node -r dotenv/config __build__/main.js",
        "db:dev:start": "docker-compose up -d postgres",
        "db:dev:shell": "docker exec -it postgres psql -U api",
        "fix": "prettier --write .",
        "kong:dev:bootstrap": "docker exec -it postgres psql -U api -c 'create database kong' && docker run --rm --network=kong-net -e KONG_DATABASE=postgres -e KONG_PG_HOST=postgres -e KONG_PG_DATABASE=kong -e KONG_PG_USER=api -e KONG_PG_PASSWORD=api kong:3.1.1 kong migrations bootstrap",
        "kong:dev:start": "docker-compose up -d kong",
        "kong:dev:reset": "deck reset",
        "kong:dev:configure": "deck sync -s kong/configs/kong_base.yml",
        "lint:ci": "prettier --check .",
        "test": "DOTENV_CONFIG_PATH=test.env jest",
        "test:ci": "DOTENV_CONFIG_PATH=test.env jest",
        "test:integration": "jest -i -c jest.config.integration.js"
    },
    "devDependencies": {
        "@types/bcrypt": "^5",
        "@types/jest": "^29.2.6",
        "@types/node": "^18.11.18",
        "@types/pino": "^7.0.5",
        "@types/wait-on": "^5.3.1",
        "bcrypt": "^5.1.0",
        "jest": "^29.3.1",
        "jest-mock-extended": "^3.0.1",
        "mailgun.js": "^8.2.1",
        "nodemon": "^2.0.20",
        "pino-pretty": "^9.1.1",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "tsconfig": "*",
        "tsx": "^3.12.2",
        "typescript": "^4.9.4",
        "wait-on": "^7.0.1",
        "zod": "^3.21.4"
    },
    "dependencies": {
        "@trpc/client": "^10.9.0",
        "@trpc/server": "^10.9.0",
        "axios": "^1.2.4",
        "cuid": "^3.0.0",
        "dotenv": "^16.0.3",
        "http-status-codes": "^2.2.0",
        "integrator-db": "*",
        "pino": "^8.8.0",
        "zippo-interface": "*"
    }
}
