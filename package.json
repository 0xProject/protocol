        "prettier": "prettier --write 'src/**/*.ts' --config .prettierrc",
        "start": "node -r dotenv/config lib/index.js",
        "start:service:http": "node -r dotenv/config lib/runners/http_service_runner.js",
        "start:service:ws": "node -r dotenv/config lib/runners/websocket_service_runner.js",
        "start:service:order_watcher": "node -r dotenv/config lib/runners/order_watcher_service_runner.js",
        "lint": "tslint --project . --format stylish"
    },
    "devDependencies": {
        "@0x/tslint-config": "^4.0.0",
